{
    "manifest_version": 2,

    "name": "Archive-it Warcprox Extension",
    "description": "This extension toggles the browser proxy to archive content through the specified warcprox host",
    "version": "1.0",

    "browser_action": {
        "default_icon": "ait-logo-black.png",
        "default_title": "Archive-it Warcprox"
        // "default_popup" : "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
     },
    "permissions": [
        "proxy",
        "tabs",
        "activeTab",
        "<all_urls>"
    ]
    // "content_scripts": [
